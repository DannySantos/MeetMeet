.content-wrapper
  .col-sm-6.col-sm-offset-3.edit-profile
    %h2 Edit Profile
    = form_for @profile do |f|
      %fieldset
        %h3 Profile Picture
        = f.text_field :image_url, class: "form-control"
      %fieldset
        %h3 Biography
        = f.text_area :biography, class: "form-control"
      %fieldset
        %h3 Location
        = f.text_field :town_city, class: "form-control"
        = f.text_field :country, class: "form-control"
        = f.submit "Save Changes", class: "btn btn-info form-control"